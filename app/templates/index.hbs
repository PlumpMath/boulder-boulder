{{problem-svg grade=grade primaryColor=primaryColor}}

<div class="grades">
  {{#each grades}}
    <label class="grade">
      {{radio-button selection=controller.grade value=name}}
      {{name}}
    </label>
  {{/each}}
</div>

<div class="tapes">
  <div>
    {{#each color in colors}}
      <label class="color">
        {{radio-button selection=controller.primaryColor value=color.hex}}
        {{color-square hex=color.hex name=color.name}}
        {{color.name}}
      </label>
    {{/each}}
  </div>

  <div>
    {{#each color in colors}}
      <label class="color">
        {{radio-button selection=controller.secondaryColor value=color.hex}}
        {{color-square hex=color.hex name=color.name}}
        {{color.name}}
      </label>
    {{/each}}
  </div>

  <div>
    {{#each tape in tapePatterns}}
      <label class="tape">
        {{radio-button selection=controller.tapePattern value=tape}}
        {{tape}}
      </label>
    {{/each}}
  </div>

</div>

<button class="btn" {{action 'save'}}>save</button>
